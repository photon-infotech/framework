<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.photon.phresco.ci</groupId>
	<artifactId>ci</artifactId>
	<packaging>war</packaging>
	<version>3.3.1.11002-SNAPSHOT</version>
	<name>CI Web Application</name>
   
	<dependencies>
		<dependency>
			<groupId>org.jenkins-ci.main</groupId>
			<artifactId>jenkins-war</artifactId>
			<version>1.442</version>
			<type>war</type>
		</dependency>
		
		<dependency>
			<groupId>org.jenkins-ci.plugins</groupId>
			<artifactId>multiple-scms</artifactId>
			<version>0.3</version>
			<type>hpi</type>
		</dependency>


		<dependency>
			  <groupId>git.plugin</groupId>
			  <artifactId>git</artifactId>
			  <version>1.0</version>
			  <type>hpi</type>
		</dependency>

		<dependency>
			  <groupId>git.plugin</groupId>
			  <artifactId>github</artifactId>
			  <version>1.0</version>
			  <type>hpi</type>
		</dependency>

		<dependency>
			  <groupId>git.plugin</groupId>
			  <artifactId>github-api</artifactId>
			  <version>1.0</version>
			  <type>hpi</type>
		</dependency>

		<dependency>
			  <groupId>collabnet.plugin</groupId>
			  <artifactId>collabnet</artifactId>
			  <version>1.1.6</version>
			  <type>hpi</type>
		</dependency>

		<dependency>
			  <groupId>jenkins.promoted.builds.plugin</groupId>
			  <artifactId>promoted</artifactId>
			  <version>2.6.1</version>
			  <type>hpi</type>
		</dependency>
        
        <dependency>
			  <groupId>jenkins.sonar.plugin</groupId>
			  <artifactId>sonar</artifactId>
			  <version>1.8</version>
			  <type>hpi</type>
		</dependency>
        
		<dependency>
			<groupId>org.hudsonci.plugins</groupId>
			<artifactId>clone-workspace-scm</artifactId>
			<version>0.5-h-1</version>
			<type>hpi</type>
		</dependency>
		
		<dependency>
		  <groupId>build</groupId>
		  <artifactId>build-pipeline</artifactId>
		  <version>1.0</version>
		  <type>hpi</type>
		</dependency>

		<dependency>
		  <groupId>confluence</groupId>
		  <artifactId>confluence-publisher</artifactId>
		  <version>1.0</version>
		  <type>hpi</type>
		</dependency>
        
        <dependency>
            <groupId>org.jenkins</groupId>
            <artifactId>testflight</artifactId>
            <version>1.3.9</version>
            <type>hpi</type>
        </dependency>
		
		<dependency>
			<groupId>org.jenkins</groupId>
			<artifactId>tfs</artifactId>
			<version>3.0.1</version>
			<type>hpi</type>
		</dependency>

		
		<dependency>
			<groupId>org.jenkins-ci</groupId>
			<artifactId>xcode-plugin</artifactId>
			<version>1.0</version>
			<type>hpi</type>
		</dependency>	
	</dependencies>
	
	<build>	
		<finalName>ci</finalName>
		<plugins>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <excludeScope>provided</excludeScope>
                            <includeTypes>hpi</includeTypes>
                            <outputDirectory>${JENKINS_HOME}/plugins</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
			<plugin>
					<groupId>com.googlecode.t7mp</groupId>
					<artifactId>maven-t7-plugin</artifactId>
					<version>0.9.9</version>
					<configuration>
						<tomcatHttpPort>3579</tomcatHttpPort>
						<tomcatShutdownPort>3005</tomcatShutdownPort>
						<tomcatShutdownCommand>SHUTDOWN</tomcatShutdownCommand>
						<tomcatVersion>7.0.6</tomcatVersion>
						<tomcatSetAwait>false</tomcatSetAwait>
					</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.3</version>
		  </plugin>
		</plugins>
	</build>
	
	<repositories>
		<repository>		
			<id>dev-binaries</id>
			<url>http://172.16.18.174:9090/nexus/content/repositories/dev-binaries</url>	
		</repository>
	</repositories>

</project>
